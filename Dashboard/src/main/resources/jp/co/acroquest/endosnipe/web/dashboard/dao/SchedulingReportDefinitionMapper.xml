		column="LAST_EXPORT_REPORT_TIME" /> </resultMap> -->

	<!-- <insert id="insert" parameterType="jp.co.acroquest.endosnipe.web.dashboard.entity.SchedulingReportDefinition"> 
		insert into SCHEDULING_REPORT_DEFINITION (REPORT_NAME,TARGET_MEASUREMENT_NAME,SCHEDULE_TERM,SCHEDULE_TIME,SCHEDULE_DAY,SCHEDULE_DATE) 
		values (#{reportName_},#{targetMeasurementName_},#{term_},#{time_},#{day_},#{date_}) 
		</insert> -->

	<insert id="insert"
		parameterType="jp.co.acroquest.endosnipe.web.dashboard.entity.SchedulingReportDefinition">
		<if test="term_.equals('DAILY')">
			insert into SCHEDULING_REPORT_DEFINITION
			(REPORT_NAME,TARGET_MEASUREMENT_NAME,SCHEDULE_TERM,SCHEDULE_TIME,LAST_EXPORT_REPORT_TIME)
			values
			(#{reportName_},#{targetMeasurementName_},#{term_},#{time_},#{lastExportedTime_});
		</if>

		<if test="term_.equals('WEEKLY')">
			insert into SCHEDULING_REPORT_DEFINITION
			(REPORT_NAME,TARGET_MEASUREMENT_NAME,SCHEDULE_TERM,SCHEDULE_TIME,SCHEDULE_DAY,LAST_EXPORT_REPORT_TIME)
			values
			(#{reportName_},#{targetMeasurementName_},#{term_},#{time_},#{day_},#{lastExportedTime_});
		</if>
		<if test="term_.equals('MONTHLY')">
			insert into SCHEDULING_REPORT_DEFINITION
			(REPORT_NAME,TARGET_MEASUREMENT_NAME,SCHEDULE_TERM,SCHEDULE_TIME,SCHEDULE_DATE,LAST_EXPORT_REPORT_TIME)
			values
			(#{reportName_},#{targetMeasurementName_},#{term_},#{time_},#{date_},#{lastExportedTime_});
		</if>
	</insert>

	<select id="selectById" resultMap="SchedulingReportDefinitionMap">
		SELECT * FROM
		SCHEDULING_REPORT_DEFINITION
		where REPORT_ID
		= #{reportId_}
	</select>

	<select id="selectByName" resultMap="SchedulingReportDefinitionMap">
		SELECT * FROM
		SCHEDULING_REPORT_DEFINITION
		where REPORT_NAME
		= #{reportName_}
	</select>

	<update id="update"
		parameterType="jp.co.acroquest.endosnipe.web.dashboard.entity.SchedulingReportDefinition">

		<if test="term_.equals('DAILY')">
			update SCHEDULING_REPORT_DEFINITION set
			REPORT_NAME =
			#{reportName_},
			TARGET_MEASUREMENT_NAME = #{targetMeasurementName_},
			SCHEDULE_TERM = #{term_},
			SCHEDULE_TIME = #{time_},
			SCHEDULE_DATE = #{date_},
			SCHEDULE_DAY = #{day_},
			LAST_EXPORT_REPORT_TIME = #{lastExportedTime_}
			where
			REPORT_NAME
			=
			#{reportName_}

		</if>
		<if test="term_.equals('WEEKLY')"> update SCHEDULING_REPORT_DEFINITION
			set REPORT_NAME =
			#{reportName_},
			TARGET_MEASUREMENT_NAME = #{targetMeasurementName_},
			SCHEDULE_TERM = #{term_},
			SCHEDULE_TIME = #{time_},
			SCHEDULE_DATE = #{date_},
			SCHEDULE_DAY = #{day_},
			LAST_EXPORT_REPORT_TIME = #{lastExportedTime_}
			where REPORT_NAME = #{reportName_}
		</if>
		<if test="term_.equals('MONTHLY')">
			update SCHEDULING_REPORT_DEFINITION set
			REPORT_NAME = #{reportName_},
			TARGET_MEASUREMENT_NAME =
			#{targetMeasurementName_},
			SCHEDULE_TERM = #{term_},
			SCHEDULE_TIME = #{time_},
			SCHEDULE_DATE = #{date_},
			SCHEDULE_DAY = #{day_},
			LAST_EXPORT_REPORT_TIME = #{lastExportedTime_}
			where REPORT_NAME = #{reportName_}
		</if>
	</update>

	<select id="selectAll" resultMap="SchedulingReportDefinitionMap">
		SELECT * FROM
		SCHEDULING_REPORT_DEFINITION
	</select>
	<select id="selectBySchedule" resultMap="SchedulingReportDefinitionMap"
		parameterType="java.sql.Timestamp">
		SELECT * FROM
		SCHEDULING_REPORT_DEFINITION
		where
		LAST_EXPORT_REPORT_TIME
		= #{currentTime}
	</select>
	<delete id="deleteById">
		delete from SCHEDULING_REPORT_DEFINITION
		where
		REPORT_ID
		= #{reportId_}
	</delete>
