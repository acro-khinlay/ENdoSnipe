		column="REPORT_NAME" /> <result property="targetMeasurementName_" column="TARGET_MEASUREMENT_NAME" 
		/> <result property="term_" column="SCHEDULE_TERM" /> <result property="time_" 
		column="SCHEDULE_TIME" /> <result property="day_" column="SCHEDULE_DAY" /> 
